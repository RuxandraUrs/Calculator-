<Window x:Class="calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculator"
        Width="500"
        Height="600"
        Background="Ivory"
        ResizeMode="CanMinimize"
        KeyDown="KeyboardInput">
        

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="80" />
            <RowDefinition Height="80" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Menu Height="25" Grid.Row="0" Background="LightGoldenrodYellow">
            <Menu.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="4"/>
                </ItemsPanelTemplate>
            </Menu.ItemsPanel>

            <MenuItem Header="Help" FontSize="15" Background="LavenderBlush" Margin="0,0,-25,0">
                <MenuItem x:Name="About" Header="About" Click="About_Click" Background="LavenderBlush"/>
            </MenuItem>

            <MenuItem Header="File" FontSize="15" Background="LavenderBlush" Margin="22,0,-56,0">
                <MenuItem x:Name="Copy" Header="Copy" Click="Copy_Click" Background="LavenderBlush"/>
                <MenuItem x:Name="Cut" Header="Cut" Click="Cut_Click" Background="LavenderBlush"/>
                <MenuItem x:Name="Paste" Header="Paste" Click="Paste_Click" Background="LavenderBlush"/>
                <MenuItem x:Name="Digit2" Header="Digit grouping" IsCheckable="True" IsChecked="False" Click="Digit2_Click" />
            </MenuItem>

            <MenuItem Header="Calculation System" FontSize="15" Background="LavenderBlush" Margin="52,0,-200,0">
                <MenuItem x:Name="Binary" Header="Binary" Click="Binary_Click" Background="LavenderBlush"/>
                <MenuItem x:Name="Octal" Header="Octal" Click="Octal_Click" Background="LavenderBlush"/>
                <MenuItem x:Name="Decimal" Header="Decimal" Click="Decimal_Click" Background="LavenderBlush"/>
                <MenuItem x:Name="Hex" Header="Hex" Click="Hex_Click" Background="LavenderBlush"/>
            </MenuItem>

            <MenuItem x:Name="modeToggleMenuItem" Header="Standard"
              FontSize="15" Background="LavenderBlush" Margin="189,0,-399,0"
              Click="ModeToggleMenuItem_Click" />
        </Menu>

        <TextBox x:Name="expressionDisplay"
                 Grid.Row="1"
                 Grid.Column="0"
                 Grid.ColumnSpan="5"
                 Background="Transparent"
                 IsReadOnly="True"
                 FontSize="16"
                 VerticalAlignment="Top"
                 Text="Your expression"
                 Foreground="Gray" Height="70" Margin="10,0,10,0" />

        <TextBox x:Name="text"
                 Grid.Row="1"
                 Grid.Column="0"
                 Grid.ColumnSpan="5"
                 Background="Transparent"
                 IsReadOnly="True"
                 FontSize="40"
                 VerticalAlignment="Top"
                 Text="0"
                 Margin="10,75,10,0" Grid.RowSpan="2" RenderTransformOrigin="0.5,0.5" Height="71" >
            
        </TextBox>

        <Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button x:Name="clearMemory"
                    Grid.Column="0"
                    Content="MC"
                    Background="Wheat"
                    FontSize="20"
                    Margin="0,-13,0,0"
                    Click="ClearMemory_Click" />

            <Button x:Name="recallMemory"
                    Content="MR"
                    Background="Wheat"
                    FontSize="20"
                    Margin="83,-13,83,0"
                    Click="RecallMemory_Click" Grid.ColumnSpan="3" />

            <Button x:Name="addToMemory"
                    Grid.Column="2"
                    Content="M+"
                    Background="Wheat"
                    FontSize="20"
                    Margin="0,-13,0,0"
                    Click="AddToMemory_Click" />

            <Button x:Name="subtractFromMemory"
                    Grid.Column="3"
                    Content="M-"
                    Background="Wheat"
                    FontSize="20"
                    Margin="0,-13,0,0"
                    Click="SubtractFromMemory_Click" />

            <Button x:Name="saveMemory"
                    Grid.Column="3"
                    Content="MS"
                    Background="Wheat"
                    FontSize="20"
                    Margin="83,-13,83,0"
                    Click="SaveMemory_Click" Grid.ColumnSpan="3" Height="44" VerticalAlignment="Top" />

            <Button x:Name="showMemory"
                    Grid.Column="5"
                    Content="M>"
                    Background="Wheat"
                    FontSize="20"
                    Margin="0,-13,0,0"
                    Click="ShowMemory_Click" />
            
            
        </Grid>

        <Button x:Name="hexD"
                Grid.Row="4"
                Grid.Column="0"
                Content="D"
                Background="LavenderBlush"
                FontSize="20"
                Margin="0"
                Click="D_Click" />

        <Button x:Name="hexE"
                Grid.Row="4"
                Grid.Column="1"
                Content="E"
                Background="LavenderBlush"
                FontSize="20"
                Margin="0"
                Click="E_Click" />

        <Button x:Name="hexF"
                Grid.Row="4"
                Grid.Column="2"
                Content="F"
                Background="LavenderBlush"
                FontSize="20"
                Margin="0"
                Click="F_Click" />

        <Button x:Name="radical"
                Grid.Row="4"
                Grid.Column="3"
                Content="√x"
                Background="AntiqueWhite"
                FontSize="20"
                Margin="0"
                Click="Radical_Click" />

        <Button x:Name="backspace"
                Grid.Row="4"
                Grid.Column="4"
                Content="⌫"
                Foreground="Blue"
                Background="AntiqueWhite"
                FontSize="20"
                Margin="0"
                Click="Backspace_Click" />

        <Button x:Name="hexA"
                Grid.Row="5"
                Grid.Column="0"
                Content="A"
                Background="LavenderBlush"
                FontSize="20"
                Margin="0"
                Click="A_Click" />

        <Button x:Name="hexB"
                Grid.Row="5"
                Grid.Column="1"
                Content="B"
                Background="LavenderBlush"
                FontSize="20"
                Margin="0"
                Click="B_Click" />

        <Button x:Name="hexC"
                Grid.Row="5"
                Grid.Column="2"
                Content="C"
                Background="LavenderBlush"
                FontSize="20"
                Margin="0"
                Click="C_Click" />

        <Button x:Name="square"
                Grid.Row="5"
                Grid.Column="3"
                Content="x²"
                Background="AntiqueWhite"
                FontSize="20"
                Margin="0"
                Click="Square_Click" />

        <Button x:Name="division"
                Grid.Row="5"
                Grid.Column="4"
                Content="÷"
                Background="AntiqueWhite"
                FontSize="20"
                Margin="0"
                Click="Division_Click" />

        <Button x:Name="seven"
                Grid.Row="6"
                Grid.Column="0"
                Content="7"
                Background="LavenderBlush"
                FontSize="20"
                Margin="0"
                Click="Seven_Click" />

        <Button x:Name="eight"
                Grid.Row="6"
                Grid.Column="1"
                Content="8"
                Background="LavenderBlush"
                FontSize="20"
                Margin="0"
                Click="Eight_Click" />

        <Button x:Name="nine"
                Grid.Row="6"
                Grid.Column="2"
                Content="9"
                Background="LavenderBlush"
                FontSize="20"
                Margin="0"
                Click="Nine_Click" />

        <Button x:Name="reverse"
                Grid.Row="6"
                Grid.Column="3"
                Content="1/x"
                Background="AntiqueWhite"
                FontSize="20"
                Margin="0"
                Click="Reverse_Click" />

        <Button x:Name="multiplication"
                Grid.Row="6"
                Grid.Column="4"
                Content="×"
                Background="AntiqueWhite"
                FontSize="20"
                Margin="0"
                Click="Multiplication_Click" />

        <Button x:Name="four"
                Grid.Row="7"
                Grid.Column="0"
                Content="4"
                Background="LavenderBlush"
                FontSize="20"
                Margin="0"
                Click="Four_Click" />

        <Button x:Name="five"
                Grid.Row="7"
                Grid.Column="1"
                Content="5"
                Background="LavenderBlush"
                FontSize="20"
                Margin="0"
                Click="Five_Click" />

        <Button x:Name="six"
                Grid.Row="7"
                Grid.Column="2"
                Content="6"
                Background="LavenderBlush"
                FontSize="20"
                Margin="0"
                Click="Six_Click" />

        <Button x:Name="minus"
                Grid.Row="7"
                Grid.Column="3"
                Content="-"
                Background="AntiqueWhite"
                FontSize="20"
                Margin="0"
                Click="Minus_Click" />

        <Button x:Name="plus"
                Grid.Row="7"
                Grid.Column="4"
                Content="+"
                Background="AntiqueWhite"
                FontSize="20"
                Margin="0"
                Click="Plus_Click" />

        <Button x:Name="one"
                Grid.Row="8"
                Grid.Column="0"
                Content="1"
                Background="LavenderBlush"
                FontSize="20"
                Margin="0"
                Click="One_Click" />

        <Button x:Name="two"
                Grid.Row="8"
                Grid.Column="1"
                Content="2"
                Background="LavenderBlush"
                FontSize="20"
                Margin="0"
                Click="Two_Click" />

        <Button x:Name="three"
                Grid.Row="8"
                Grid.Column="2"
                Content="3"
                Background="LavenderBlush"
                FontSize="20"
                Margin="0"
                Click="Three_Click" />

        <Button x:Name="clear"
                Grid.Row="8"
                Grid.Column="3"
                Content="C"
                Foreground="Red"
                Background="AntiqueWhite"
                FontSize="20"
                Margin="0"
                Click="Clear_Click" />

        <Button x:Name="percent"
                Grid.Row="8"
                Grid.Column="4"
                Content="%"
                Background="AntiqueWhite"
                FontSize="20"
                Margin="0"
                Click="Percent_Click" />

        <Button x:Name="plusMinus"
                Grid.Row="9"
                Grid.Column="0"
                Content="+/-"
                Background="LavenderBlush"
                FontSize="20"
                Margin="0"
                Click="PlusOrMinus_Click" />

        <Button x:Name="zero"
                Grid.Row="9"
                Grid.Column="1"
                Content="0"
                Background="LavenderBlush"
                FontSize="20"
                Margin="0"
                Click="Zero_Click" />

        <Button x:Name="comma"
                Grid.Row="9"
                Grid.Column="2"
                Content="."
                Background="LavenderBlush"
                FontSize="20"
                Margin="0"
                Click="Comma_Click" />

        <Button x:Name="clearEntry"
                Grid.Row="9"
                Grid.Column="3"
                Content="CE"
                Foreground="Green"
                Background="AntiqueWhite"
                FontSize="20"
                Margin="0"
                Click="ClearEntry_Click" />

        <Button x:Name="equal"
                Grid.Row="9"
                Grid.Column="4"
                Content="="
                Background="AntiqueWhite"
                FontSize="20"
                Margin="0"
                Click="Equal_Click" />
    </Grid>
</Window>
